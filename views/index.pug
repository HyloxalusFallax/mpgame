extends layout

block content
	div(align='center')
		h1 Game
		div(class='centerContainer')
			div(id='roomsList', align='left')
			form(id='addRoomForm')
				div(class='formRow')
					label(for="newRoomName") Room name:
					input(id ='newRoomName', type='text', placeholder='New room name')
				div(class='formRow')
					label(for="botsNumber") Bots number:
					input(id ='botsNumber', type='number', min=0, max=10)
				div(class='formRow')
					button(type='submit', id='addRoom') Add room

	script(src='/javascripts/index.js')